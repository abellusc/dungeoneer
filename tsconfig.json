{
  "extends": "@tsconfig/node12",
  "compilerOptions": {
    "target": "es6",
    "checkJs": false,
    "allowJs": true,
    "lib": [
      "es5",
      "es6"
    ],
    "moduleResolution": "node",
    "module": "commonjs",
    "declaration": true
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "node_modules/",
    "build/",
    "dist/",
    "lib/"
  ]
}
